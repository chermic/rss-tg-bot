# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# RSS Feeds Configuration
# You can either use the default feeds or specify custom ones as JSON array
# RSS_FEEDS=["https://example.com/feed1.xml", "https://example.com/feed2.xml"]

# Recipients Configuration
# Specify Telegram chat IDs as JSON array
RECIPIENTS=[123456789, 987654321]

# Logging Configuration
LOG_LEVEL=INFO
# Available levels: DEBUG, INFO, WARN, ERROR

# Rate Limiting Configuration
# Delay between messages in milliseconds (default: 1000ms = 1 second)
RATE_LIMIT_MS=1000

# Retry Configuration
# Maximum number of retries for failed operations (default: 3)
MAX_RETRIES=3

# Feed Processing Configuration
# Maximum number of items to include per RSS feed (default: 5)
MAX_ITEMS_PER_FEED=5

# Concurrency Configuration
# Maximum number of concurrent workers for processing feeds (default: 3)
MAX_WORKERS=3 